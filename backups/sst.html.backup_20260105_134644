    <script>
        // MMM values for each site
        const MMM = {
            kushimoto: 28.0,
            ogasawara: 28.5,
            amami: 29.0,
            sesoko: 29.0,
            manza: 29.0,
            kerama: 29.0,
            sekisei: 29.5
        };

        // Chart instances
        let sstChart, climChart;

        // Supabaseè¨­å®š
        const SUPABASE_URL = 'https://pegiuiblpliainpdggfj.supabase.co';
        const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InBlZ2l1aWJscGxpYWlucGRnZ2ZqIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjQyMDkzNzQsImV4cCI6MjA3OTc4NTM3NH0.r9dBAsMLoXbgZL93lvA756r74U6YfCCfftHHlxYqZIw';

        async function loadCurrentSST() {
            const SITES = ['kushimoto', 'ogasawara', 'amami', 'sesoko', 'manza', 'kerama', 'sekisei'];
            try {
                const response = await fetch(
                    `${SUPABASE_URL}/rest/v1/sst_daily?select=date,site_code,sst&order=date.desc&limit=21`,
                    { headers: { 'apikey': SUPABASE_ANON_KEY } }
                );
                if (!response.ok) throw new Error(`HTTP ${response.status}`);
                const data = await response.json();
                
                const latest = {};
                let latestDate = null;
                data.forEach(row => {
                    if (!latest[row.site_code]) {
                        latest[row.site_code] = { sst: row.sst, date: row.date };
                    }
                    if (!latestDate || row.date > latestDate) latestDate = row.date;
                });
                
                SITES.forEach(site => {
                    const siteData = latest[site];
                    if (siteData) {
                        const sst = siteData.sst;
                        const diff = sst - MMM[site];
                        
                        const sstEl = document.getElementById(`sst-${site}`);
                        if (sstEl) sstEl.textContent = sst.toFixed(1) + 'Â°C';
                        
                        const diffEl = document.getElementById(`diff-${site}`);
                        if (diffEl) {
                            const sign = diff >= 0 ? '+' : '';
                            diffEl.textContent = `${sign}${diff.toFixed(1)}Â°C vs MMM`;
                            diffEl.className = 'sst-diff ' + (diff > 1 ? 'above' : diff < -1 ? 'below' : 'neutral');
                        }
                    }
                });
                
                // æ—¥ä»˜è¡¨ç¤º: æœ€æ–°ãƒ‡ãƒ¼ã‚¿æ—¥ | æ›´æ–°æ—¥ï¼ˆä»Šæ—¥ï¼‰
                if (latestDate) {
                    const dataDateObj = new Date(Date.UTC(
                        ...latestDate.split('-').map(Number).map((v, i) => i === 1 ? v - 1 : v)
                    ));
                    const today = new Date();
                    
                    const months = ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'];
                    const dataEn = months[dataDateObj.getUTCMonth()] + ' ' + dataDateObj.getUTCDate();
                    const dataJa = `${dataDateObj.getUTCMonth() + 1}/${dataDateObj.getUTCDate()}`;
                    const updateEn = months[today.getMonth()] + ' ' + today.getDate();
                    const updateJa = `${today.getMonth() + 1}/${today.getDate()}`;
                    
                    const enEl = document.getElementById('sst-dates-en');
                    const jaEl = document.getElementById('sst-dates-ja');
                    if (enEl) enEl.textContent = `Data: ${dataEn} (observation date)`;
                    if (jaEl) jaEl.textContent = `ãƒ‡ãƒ¼ã‚¿: ${dataJa}ï¼ˆè¦³æ¸¬æ—¥ï¼‰`;
                }
                
                console.log('âœ“ loadCurrentSST completed (7 sites from Supabase)');
            } catch (e) {
                console.error('Failed to load SST data:', e);
            }
        }

        async function loadExtremeDays() {
            try {
                const response = await fetch('data/extreme_days.json');
                if (!response.ok) throw new Error(`HTTP ${response.status}`);
                const data = await response.json();
                
                ['manza', 'sesoko', 'ogasawara'].forEach(site => {
                    const hotData = data.hot_days?.[site];
                    if (hotData) {
                        const hot2024 = hotData.find(d => d.year === 2024);
                        const hotEl = document.getElementById(`days-hot-${site}`);
                        if (hotEl) {
                            hotEl.textContent = hot2024 ? hot2024.days : 0;
                        }
                    }
                    
                    const coldData = data.cold_days?.[site];
                    if (coldData) {
                        const cold2025 = coldData.find(d => d.year === 2025);
                        const coldEl = document.getElementById(`days-cold-${site}`);
                        if (coldEl) {
                            coldEl.textContent = cold2025 ? cold2025.days : 0;
                        }
                        if (site === 'ogasawara' && cold2025) {
                            const inlineEl = document.getElementById('cold-ogasawara-inline');
                            const inlineElJa = document.getElementById('cold-ogasawara-inline-ja');
                            if (inlineEl) inlineEl.textContent = cold2025.days;
                            if (inlineElJa) inlineElJa.textContent = cold2025.days;
                        }
                    }
                });
                console.log('âœ“ loadExtremeDays completed');
            } catch (e) {
                console.error('Failed to load extreme days data:', e);
            }
        }

        async function renderSSTChart() {
            const SITE_CONFIG = {
                kushimoto: { label: 'Kushimoto', color: '#805ad5' },
                ogasawara: { label: 'Ogasawara', color: '#2f855a' },
                amami: { label: 'Amami', color: '#d53f8c' },
                sesoko: { label: 'Sesoko', color: '#2b6cb0' },
                manza: { label: 'Manza', color: '#c05621' },
                kerama: { label: 'Kerama', color: '#0891b2' },
                sekisei: { label: 'Sekisei', color: '#e53e3e' }
            };
            try {
                const response = await fetch('data/sst_recent.json');
                if (!response.ok) throw new Error(`HTTP ${response.status}`);
                const data = await response.json();
                
                // ãƒ©ãƒ™ãƒ«ç”¨ã«æœ€åˆã«è¦‹ã¤ã‹ã£ãŸã‚µã‚¤ãƒˆã‚’ä½¿ç”¨
                const firstSite = Object.keys(SITE_CONFIG).find(s => data[s]?.length > 0);
                if (!firstSite) throw new Error('No site data');
                
                const labels = data[firstSite].map(d => d.date.slice(5));
                
                const datasets = Object.entries(SITE_CONFIG).map(([site, cfg]) => ({
                    label: cfg.label,
                    data: data[site]?.map(d => d.sst) || [],
                    borderColor: cfg.color,
                    backgroundColor: 'transparent',
                    borderWidth: 2,
                    pointRadius: 0,
                    tension: 0.3
                }));
                
                const ctx = document.getElementById('sstChart').getContext('2d');
                sstChart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: datasets
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false }
                        },
                        scales: {
                            x: {
                                grid: { display: false }
                            },
                            y: {
                                min: 16,
                                max: 32,
                                grid: { color: '#e2e8f0' }
                            }
                        }
                    }
                });
                console.log('âœ“ renderSSTChart completed');
            } catch (e) {
                console.error('Failed to render SST chart:', e);
            }
        }

        async function renderClimChart() {
            try {
                const response = await fetch('data/monthly_clim.json');
                if (!response.ok) throw new Error(`HTTP ${response.status}`);
                const data = await response.json();
                
                if (!data.manza || data.manza.length === 0) {
                    throw new Error('No manza climatology data');
                }
                
                const SITE_CONFIG = {
                    kushimoto: { label: 'Kushimoto', color: '#805ad5' },
                    ogasawara: { label: 'Ogasawara', color: '#2f855a' },
                    amami: { label: 'Amami', color: '#d53f8c' },
                    sesoko: { label: 'Sesoko', color: '#2b6cb0' },
                    manza: { label: 'Manza', color: '#c05621' },
                    kerama: { label: 'Kerama', color: '#0891b2' },
                    sekisei: { label: 'Sekisei', color: '#e53e3e' }
                };
                const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
                
                const datasets = Object.entries(SITE_CONFIG).map(([site, cfg]) => ({
                    label: cfg.label,
                    data: data[site] || [],
                    borderColor: cfg.color,
                    backgroundColor: cfg.color + '1a',
                    borderWidth: 2,
                    pointRadius: 2,
                    fill: false,
                    tension: 0.4
                }));
                
                const ctx = document.getElementById('climChart').getContext('2d');
                climChart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: months,
                        datasets: datasets
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false }
                        },
                        scales: {
                            x: {
                                grid: { display: false }
                            },
                            y: {
                                min: 16,
                                max: 32,
                                grid: { color: '#e2e8f0' }
                            }
                        }
                    }
                });
                console.log('âœ“ renderClimChart completed');
            } catch (e) {
                console.error('Failed to render climatology chart:', e);
            }
        }

        // Initialize
        console.log('SST page initializing...');
        Promise.all([
            loadCurrentSST(),
            loadExtremeDays(),
            renderSSTChart(),
            renderClimChart()
        ]).then(() => {
            console.log('âœ“ All data loaded successfully');
        }).catch(e => {
            console.error('Initialization error:', e);
        });
    </script>

    <!-- Navigation JS -->
    <script>
    (function() {
        const hamburger = document.getElementById('hamburger');
        const sidebar = document.getElementById('sidebar');
        const sidebarOverlay = document.getElementById('sidebar-overlay');
        const sidebarClose = document.getElementById('sidebar-close');
        
        function openSidebar() {
            sidebar.classList.add('active');
            sidebarOverlay.classList.add('active');
            hamburger.classList.add('active');
            document.body.style.overflow = 'hidden';
        }
        
        function closeSidebar() {
            sidebar.classList.remove('active');
            sidebarOverlay.classList.remove('active');
            hamburger.classList.remove('active');
            document.body.style.overflow = '';
        }
        
        hamburger.addEventListener('click', function() {
            if (sidebar.classList.contains('active')) {
                closeSidebar();
            } else {
                openSidebar();
            }
        });
        
        sidebarOverlay.addEventListener('click', closeSidebar);
        sidebarClose.addEventListener('click', closeSidebar);
        
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && sidebar.classList.contains('active')) {
                closeSidebar();
            }
        });
    })();
    </script>
</body>
</html>
