<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leaflet テスト - 44ロガー地点</title>
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <style>
        body {
            margin: 0;
            padding: 20px;
            font-family: -apple-system, BlinkMacSystemFont, sans-serif;
            background: #1a1a2e;
            color: #e0e0e0;
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
        #map {
            width: 100%;
            height: 600px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.3);
        }
        .legend {
            background: rgba(26, 26, 46, 0.95);
            padding: 12px 16px;
            border-radius: 8px;
            color: #e0e0e0;
            font-size: 13px;
            line-height: 1.8;
        }
        .legend-item {
            display: flex;
            align-items: center;
            gap: 8px;
        }
        .legend-circle {
            width: 14px;
            height: 14px;
            border-radius: 50%;
            border: 2px solid #fff;
        }
    </style>
</head>
<body>
    <h1>モニ1000 水温ロガー設置地点（44地点）</h1>
    <div id="map"></div>

    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        // 地図初期化（日本の中心あたり）
        const map = L.map('map').setView([28, 130], 5);

        // タイルレイヤー（OpenStreetMap）
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors',
            maxZoom: 18
        }).addTo(map);

        // 地域ごとの色
        const regionColors = {
            '本州・高緯度': '#4A90A4',
            '沖縄本島周辺': '#6AAB9C',
            '先島諸島': '#E8A87C'
        };

        // JSONデータを読み込み
        fetch('data/sst_validation_points.json')
            .then(res => res.json())
            .then(points => {
                points.forEach(p => {
                    const color = regionColors[p.region] || '#888';
                    
                    // 円マーカー
                    const marker = L.circleMarker([p.lat, p.lon], {
                        radius: 8,
                        fillColor: color,
                        color: '#fff',
                        weight: 2,
                        opacity: 1,
                        fillOpacity: 0.8
                    }).addTo(map);

                    // ポップアップ
                    marker.bindPopup(`
                        <strong>${p.name}</strong><br>
                        ${p.spot}<br>
                        <span style="color: ${color}">● ${p.region}</span><br>
                        傾き: <strong>${p.slope}</strong>
                    `);
                });

                // 全地点が見えるようにフィット
                const bounds = points.map(p => [p.lat, p.lon]);
                map.fitBounds(bounds, { padding: [30, 30] });
            });

        // 凡例
        const legend = L.control({ position: 'bottomright' });
        legend.onAdd = function() {
            const div = L.DomUtil.create('div', 'legend');
            div.innerHTML = `
                <div class="legend-item"><span class="legend-circle" style="background:#4A90A4"></span> 本州・高緯度 (n=11)</div>
                <div class="legend-item"><span class="legend-circle" style="background:#6AAB9C"></span> 沖縄本島周辺 (n=10)</div>
                <div class="legend-item"><span class="legend-circle" style="background:#E8A87C"></span> 先島諸島 (n=23)</div>
            `;
            return div;
        };
        legend.addTo(map);
    </script>
</body>
</html>
