    <script>
        function toggleEventCard(header) {
            const card = header.closest('.event-card');
            card.classList.toggle('open');
        }

        // Timeline click to open corresponding card
        document.querySelectorAll('.timeline-point').forEach(point => {
            point.addEventListener('click', () => {
                const eventId = point.dataset.event;
                const card = document.querySelector(`.event-card[data-event="${eventId}"]`);
                if (card) {
                    document.querySelectorAll('.event-card').forEach(c => c.classList.remove('open'));
                    card.classList.add('open');
                    card.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }
            });
        });

        // Language switching
        function setLang(lang) {
            document.body.classList.toggle('ja', lang === 'ja');
            document.querySelectorAll('.lang-switch button').forEach(btn => {
                btn.classList.toggle('active', btn.textContent.includes(lang === 'ja' ? 'æ—¥æœ¬èª' : 'EN'));
            });
            
            document.querySelectorAll('[data-' + lang + ']').forEach(el => {
                el.textContent = el.dataset[lang];
            });
            
            localStorage.setItem('lang', lang);
        }

        // Initialize language
        const savedLang = localStorage.getItem('lang') || 'ja';
        if (savedLang) setLang(savedLang);
    </script>
</body>
</html>
